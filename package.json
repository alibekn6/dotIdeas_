        "concurrently": "^9.1.2",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-config-react-app": "^7.0.1",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "lint-staged": "^15.4.3",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3"
    }
